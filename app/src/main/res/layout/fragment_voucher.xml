<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RechargeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/arrow_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/voch_header"
        android:layout_marginTop="30dp"
        android:text="&#x2190;"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/voch_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Redeem your voucher"
        android:textColor="#000000"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/vouchertxt1"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_below="@id/voch_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectangle"
        android:hint="Enter the voucher number"
        android:paddingStart="35dp"
        android:paddingEnd="20dp" />

    <EditText
        android:id="@+id/vouchertxt2"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_below="@id/vouchertxt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle"
        android:hint="Re-enter the number"
        android:paddingStart="35dp"
        android:paddingEnd="20dp" />

    <Button
        android:id="@+id/voucherbtnsubmit"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_below="@id/vouchertxt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/rectangle2"
        android:text="Submit" />
</RelativeLayout>